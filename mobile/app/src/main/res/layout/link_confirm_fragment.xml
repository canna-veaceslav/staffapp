<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_check"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/logo"
                android:textAlignment="inherit"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="134dp"
                tools:layout_editor_absoluteY="1dp" />


            <TextView
                android:id="@+id/linking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="@string/Linking"
                android:textAlignment="inherit"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/logo"
                tools:layout_editor_absoluteX="156dp" />


            <TextView
                android:id="@+id/link_employee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linking"
                android:layout_marginTop="10dp"
                android:autofillHints=""
                android:drawablePadding="20dp"
                android:hint="@string/link_employee"
                android:padding="6dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="140dp" />

            <TextView
                android:id="@+id/link_item"
                android:layout_width="match_parent"
                android:layout_height="55dp"

                android:layout_below="@id/link_employee"
                android:layout_marginTop="50dp"
                android:autofillHints=""
                android:drawablePadding="0dp"
                android:hint="@string/link_to_item"
                android:padding="6dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="102dp" />

            <TextView
                android:id="@+id/link_item_barcode"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@id/link_item"
                android:layout_marginTop="0dp"
                android:autofillHints=""
                android:drawablePadding="0dp"
                android:hint="@string/link_item_barcode"
                android:padding="6dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHint="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="102dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/confirm_button"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_below="@id/link_item"
                android:layout_marginTop="109dp"
                android:background="#75F1D4D4"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/link_item"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="216dp" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>